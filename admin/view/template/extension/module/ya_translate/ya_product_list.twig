                    <input type="text" name="filter_end_date_modified" value="{{ filter_end_date_modified }}" placeholder="{{ entry_end_modify }}" data-date-format="YYYY-MM-DD" id="input-end-date-modified" class="form-control" />
                    <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
                  </span>
                </div>
