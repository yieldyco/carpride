	}
	var filter_end_date_modified = $('input[name=\'filter_end_date_modified\']').val();

	if (filter_end_date_modified) {
		url += '&filter_end_date_modified=' + encodeURIComponent(filter_end_date_modified);
	}
	return url;
}

$('#button-filter').on('click', function() {
	var url = '{{ filter }}';
	location = url + getFilter();
});
