{{ header }}{{ column_left }} 
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-discounts" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-discounts" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="total_discounts_status" id="input-status" class="form-control">
                {% if (total_discounts_status) %} 
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %} 
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-special"><span data-toggle="tooltip" title="{{ help_special }}">{{ entry_special }}</span></label>
            <div class="col-sm-10">
              <select name="total_discounts_special" id="input-special" class="form-control">
                {% if (total_discounts_special) %} 
                <option value="0">{{ text_no }}</option>
                <option value="1" selected="selected">{{ text_yes }}</option>
                {% else %} 
                <option value="0" selected="selected">{{ text_no }}</option>
                <option value="1">{{ text_yes }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-priority"><span data-toggle="tooltip" title="{{ help_priority }}">{{ entry_priority }}</span></label>
            <div class="col-sm-10">
              <select name="total_discounts_priority" id="input-priority" class="form-control">
                {% if (total_discounts_priority) %} 
                <option value="0">{{ text_discount_same }}</option>
                <option value="1" selected="selected">{{ text_discount_summ }}</option>
                {% else %} 
                <option value="0" selected="selected">{{ text_discount_same }}</option>
                <option value="1">{{ text_discount_summ }}</option>
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="total_discounts_sort_order" value="{{ total_discounts_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>

          <legend>{{ text_discount_same }}</legend>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-same-qty">{{ entry_same_qty }}</label>
            <div class="col-sm-10">
              <input type="text" name="total_discounts_same_category" value="{{ total_discounts_same_category }}" placeholder="{{ entry_same_qty }}" id="input-same-qty" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-in-same"><span data-toggle="tooltip" title="{{ help_in_same }}">{{ entry_in_same }}</span></label>
            <div class="col-sm-10">
              <select name="total_discounts_in_same" class="form-control">
                {% if (total_discounts_in_same) %} 
                  <option value="0">{{ text_no }}</option>                
                  <option value="1" selected>{{ text_yes }}</option>                
                {% else %} 
                  <option value="0" selected>{{ text_no }}</option>                
                  <option value="1">{{ text_yes }}</option>                
                {% endif %} 
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-same-val">{{ entry_same_val }}</label>
            <div class="col-sm-10">
              <input type="text" name="total_discounts_same_category_val" value="{{ total_discounts_same_category_val }}" placeholder="{{ entry_same_val }}" id="input-same-val" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-target">{{ entry_target }}</label>
            <div class="col-sm-10">
              <select name="total_discounts_target" class="form-control">
                {% if (not total_discounts_target or total_discounts_target == 1) %} 
                  <option value="1" selected>{{ text_lowprice }}</option>
                  <option value="2">{{ text_highprice }}</option>
                  <option value="3">{{ text_allprice }}</option>
                {% elseif (total_discounts_target == 2) %} 
                  <option value="1">{{ text_lowprice }}</option>
                  <option value="2" selected>{{ text_highprice }}</option>
                  <option value="3">{{ text_allprice }}</option>
                {% elseif (total_discounts_target == 3) %} 
                  <option value="1">{{ text_lowprice }}</option>
                  <option value="2">{{ text_highprice }}</option>
                  <option value="3" selected>{{ text_allprice }}</option>
                {% endif %} 
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-customer-groups-qty"><span data-toggle="tooltip" title="{{ help_customer_groups }}">{{ entry_customer_groups }}</span></label>
            <div class="col-sm-10">
              <div class="well well-sm" style="height: 150px; overflow: auto;">
                {% for customer_group in customer_groups %} 
                <div class="checkbox">
                  <label>
                    {% if customer_group['customer_group_id'] in total_discounts_customer_groups_qty %} 
                    <input id="input-customer-groups-qty" type="checkbox" name="total_discounts_customer_groups_qty[]" value="{{ customer_group['customer_group_id'] }}" checked="checked" />
                    {{ customer_group['name'] }} 
                    {% else %} 
                    <input id="input-customer-groups-qty" type="checkbox" name="total_discounts_customer_groups_qty[]" value="{{ customer_group['customer_group_id'] }}" />
                    {{ customer_group['name'] }} 
                    {% endif %} 
                  </label>
                </div>
                {% endfor %} 
              </div>
            </div>
          </div>

          <legend>{{ text_discount_summ }}</legend>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-summ">{{ entry_summ }}</label>
            <div class="col-sm-10">
              <input type="text" name="total_discounts_summ" value="{{ total_discounts_summ }}" placeholder="{{ entry_summ }}" id="input-summ" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-summ-val">{{ entry_summ_val }}</label>
            <div class="col-sm-10">
              <input type="text" name="total_discounts_summ_val" value="{{ total_discounts_summ_val }}" placeholder="{{ entry_summ_val }}" id="input-summ-val" class="form-control" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-customer-groups-summ"><span data-toggle="tooltip" title="{{ help_customer_groups }}">{{ entry_customer_groups }}</span></label>
            <div class="col-sm-10">
              <div class="well well-sm" style="height: 150px; overflow: auto;">
                {% for customer_group in customer_groups %} 
                <div class="checkbox">
                  <label>
                    {% if customer_group['customer_group_id'] in total_discounts_customer_groups_summ %} 
                    <input id="input-customer-groups-summ" type="checkbox" name="total_discounts_customer_groups_summ[]" value="{{ customer_group['customer_group_id'] }}" checked="checked" />
                    {{ customer_group['name'] }} 
                    {% else %} 
                    <input id="input-customer-groups-summ" type="checkbox" name="total_discounts_customer_groups_summ[]" value="{{ customer_group['customer_group_id'] }}" />
                    {{ customer_group['name'] }} 
                    {% endif %} 
                  </label>
                </div>
                {% endfor %} 
              </div>
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}